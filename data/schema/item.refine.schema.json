{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "RefineSeed",
    "type": "object",
    "required": ["id", "name", "category", "costG", "appliesToWeaponGroups"],
    "properties": {
        "id": {
            "type": "string",
            "description": "Unique ID e.g. refine.steel"
        },
        "name": { "type": "string" },

        "category": {
            "type": "string",
            "enum": ["basic", "advanced", "gmOnly"]
        },

        "costG": { "type": "number", "minimum": 0 },

        "appliesToWeaponGroups": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": ["sword", "lance", "axe", "bow", "dagger", "anima", "light", "dark", "staff", "strike", "talons", "breath", "shiftingStone", "curse", "siege"]
            },
            "minItems": 1
        },

        "description": { "type": "string" },

        "statBonuses": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "might": { "type": "number" },
                "minRange": { "type": "number" },
                "maxRange": { "type": "number" },
                "hit": { "type": "number" },
                "crit": { "type": "number" },
                "critAvoid": { "type": "number" },
                "avoid": { "type": "number" },
                "atk":  { "type": "number" },
                "dex":   { "type": "number" },
                "spd":  { "type": "number" },
                "def":  { "type": "number" },
                "res":  { "type": "number" },
                "luck": { "type": "number" }
            }        
        },
        "tags": {
            "type": "array",
            "items": { "type": "string" }
        }
    }
}